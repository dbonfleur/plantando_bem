@page
@model plantando_bem.RazorPages.Pages.Identifica.IdentificaPlantaUsers
@{
    ViewData["Title"] = "Ajude a identificar plantas:";
}

<h2 style="color: green;">@ViewData["Title"]</h2>
<link rel="stylesheet" href="~/css/identificaPlanta.css"/>

<div class="table-wrapper-scroll-y my-custom-scrollbar">
    @foreach (var plantas in Model.UserIdentPlantas!)
    {
        <table class="table table-borderless">
            <tr>
                <td style="text-align: center;">
                    <img src="data:image/png;base64,@(Convert.ToBase64String(plantas.PlantaIdentifica!.Imagem!))" alt="Imagem da planta"/>
                </td>
            </tr>
            <tr>
                <td style="text-align: center;">
                    @if(plantas.PlantaIdentifica!.Descricao != null) {
                        @plantas.PlantaIdentifica!.Descricao
                    }
                    @if(plantas.PlantaIdentifica!.Descricao == null) {
                        <a class="w-50 btn btn-lg btn-success bottom-button" asp-page="/Identifica/IdentificaAdicionaDescricao" asp-route-id="@plantas.PlantaIdentificaId">Ajudar a indentificar!</a>
                    }
                </td>
            </tr>
        </table>   
    }
</div>